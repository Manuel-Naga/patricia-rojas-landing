<script>
  document.getElementById('leadForm').addEventListener('submit', function(e) {
    e.preventDefault();
    const nombre = this.querySelector('input[type=text]').value;
    const tel = this.querySelector('input[type=tel]').value;
    const tipo = document.getElementById('tipo').value;
    const msg = document.getElementById('mensaje').value;

    const texto = `Hola Patricia, soy ${nombre}.
Interés: ${tipo}.
Teléfono: ${tel}.
Mensaje: ${msg}`;

    window.open(`https://wa.me/5216641302463?text=${encodeURIComponent(texto)}`, '_blank');
  });
</script>

